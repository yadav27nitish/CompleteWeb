<!doctype html>
<html>
<head>
    {{>header}}
</head>
<body>
  <div class="container">
    <div class="forms-container">
      <div class="button-box">
        <div id="btn"></div>
        <button type="button" class="toggle-btn">Sign In</button>
        <button type="button" class="toggle-btn"><span class="up">Sign Up</span></button>
      </div>
      <!-- LogIn section -->
      <div class="signin-signup">
        <form action="/login" method="POST" class="sign-in-form" id="sign-in-form">
          {{!-- <h2 class="title">Sign in</h2> --}}
          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="text" placeholder="Username" required name="firstname" autocomplete="off">
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" placeholder="Password" name="password" required> 
          </div>
          <div class="check">
            <input type="checkbox" class="checkbox"><span class="lg"> Remember Password </span>
          </div> 
            <input type="submit" class="btn_solid" value="Login">
            <p class="social-text">Or Sign in with social plateform</p>
          <div class="social-media">
            <a href="https://www.facebook.com" class="social-icon">
              <i class="fab fa-facebook"></i>
            </a>

            <a href="https://twitter.com/home" class="social-icon">
              <i class="fab fa-twitter"></i>
            </a>

            <a href="https://mail.google.com" class="social-icon">
              <i class="fab fa-google"></i>
            </a>

            <a href="https://www.linkedin.com" class="social-icon">
              <i class="fab fa-linkedin "></i>
            </a>
          </div>
          <div class="option">
            <a href="#">Forgot Password</a>
            <p>Don't have account? <a href="./signUp">Register here</a></p>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>